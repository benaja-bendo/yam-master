{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@logic/*": [
        "packages/logic/src/*"
      ],
      "@types/*": [
        "packages/types/src/*"
      ],
      "@ui/*": [
        "packages/ui/src/*"
      ],
      "@utils/*": [
        "packages/utils/src/*"
      ]
    }
  }
}